---
import { marked } from "marked";
import dayjs from "dayjs";

import { API_USERS_URL, APP_RPCIDE_URL } from "../../config";
import { getPostBySlug } from "../../lib/Posts";

import Layout from "../../layouts/Layout.astro";

dayjs.locale("es");

const { slug } = Astro.params;
const data = await getPostBySlug(slug);

if (!data) {
  return new Response(null, {
    status: 404,
    statusText: "Not found",
  });
}

const userResponse = await fetch(`${API_USERS_URL}/user/${data.authorId}`);
const { data: user } = await userResponse.json();
const content = marked.parse(data.content);
---

<Layout title={`${data.title} - RPCIDE Blog`}>
  <section class="article-content">
    <p class="text-textAlt mb-4">
      <time>{dayjs(data.createdAt).format("MMMM D, YYYY")}</time>
    </p>

    <h1 class="text-4xl font-bold mb-4">{data.title}</h1>

    {
      user && (
        <div class="flex gap-2 items-center">
          <img
            src={`${
              user.photo ||
              "https://t4.ftcdn.net/jpg/05/49/98/39/360_F_549983970_bRCkYfk0P6PP5fKbMhZMIb07mCJ6esXL.jpg"
            }`}
            alt={`FotografÃ­a de ${user.name} - @${user.username}`}
            class="rounded-full w-8 border-2 border-primary-400"
          />
          <h5>
            <a
              href={`${APP_RPCIDE_URL}/profile/${user.username}`}
              target="_blank"
            >
              {user.name}
            </a>
          </h5>
        </div>
      )
    }

    <div class="mt-10 markdown">
      <article set:html={content} />
    </div>
  </section>
</Layout>

<style is:inline>
  .article-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .markdown {
    color: var(--text-alt-color);
  }

  .markdown h1,
  .markdown h2,
  .markdown h3,
  .markdown h4,
  .markdown h5 {
    font-weight: 600;
    margin: 1.5rem 0;
    color: var(--text-color);
    font-family: var(--font-heading);
  }

  .markdown h1 {
    font-size: 1.875rem !important;
  }
  .markdown h2 {
    font-size: 1.5rem !important;
  }
  .markdown h3 {
    font-size: 1.25rem !important;
  }
  .markdown h4 {
    font-size: 1.125rem !important;
  }
  .markdown h5 {
    font-size: 1rem !important;
  }

  .markdown p {
    margin: 1rem 0;
    font-size: 1.125rem;
  }

  .markdown a {
    color: var(--primary-color);
    text-decoration: underline;
  }

  .markdown img,
  .markdown video {
    display: block;
    border-radius: 0.375rem;
    margin: 2rem auto;
    max-width: 95%;
    border-radius: 0.375rem;
  }

  .markdown ol {
    list-style: decimal;
    margin-left: 2rem;
  }

  .markdown ul {
    list-style: disc;
    margin-left: 2rem;
  }

  .markdown strong,
  .markdown b,
  .markdown em,
  .markdown i,
  .markdown u,
  .markdown a {
    font-weight: 600;
    color: var(--primary-color-light);
  }

  .markdown blockquote {
    border-left: 0.25rem solid var(--primary-color);
    padding-left: 1rem;
    margin: 2rem auto;
    font-style: italic;
    max-width: 90%;
  }

  .markdown code {
    display: block;
    margin: 2rem auto;
    background-color: var(--primary-color-light);
    color: var(--text-color);
    padding: 0.5rem;
    border-radius: 0.25rem;
    max-width: 95%;
  }
</style>
