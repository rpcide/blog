---
import Header from "../components/Header.astro";
import Categories from "../components/Categories.astro";
import Footer from "../components/Footer.astro";

import "@fontsource-variable/jost";
import "@fontsource-variable/inter-tight";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Blog del RPCIDE | Contenido de programación competitiva, estructura de datos, java, python, c++ y más temas de programación."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="bg"></div>

    <Header />
    <Categories />

    <main class="px-6 w-full max-w-screen-xl mx-auto mt-10 mb-20">
      <slot />
    </main>

    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --bg-gradient: red;
    --primary-color: #6366f1;
    --primary-color-light: #818cf8;
    --border-color: #282e3d;
    --bg-base: #1e2432;
    --bg-alt: #282d43;
    --bg-dark: #171c24;
    --text-color: #fff;
    --text-alt-color: rgb(107 114 128);
    --font-heading: "Jost Variable", sans-serif;
    --font-body: "Inter Tight Variable", sans-serif;
  }

  *,
  *::after,
  *::before {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    background-color: var(--bg-dark);
    color: var(--text-color);
  }

  body {
    font-family: "Inter Tight Variable", sans-serif;
  }

  input:focus,
  button:focus {
    outline: none;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Jost Variable", sans-serif;
  }

  .bg {
    width: 100vw;
    height: 100vh;
    position: absolute;
    top: 0;
    z-index: -2;
    background: radial-gradient(
      ellipse 80% 80% at 50% -20%,
      rgba(120, 119, 198, 0.3),
      rgba(255, 255, 255, 0)
    );
  }
</style>
